rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isValidImage() {
      return request.resource.contentType.matches('image/.*')
        && request.resource.size < 5 * 1024 * 1024; // Max 5MB
    }

    // Payment slips with detailed permissions
    match /slips/{userEmail}/{date}/{fileName} {
      // Separate rules for different operations
      allow create: if request.auth != null 
        && isValidImage();
      
      allow update: if request.auth != null 
        && isValidImage();
      
      // Important: Allow both read and get operations
      allow read: if true;
      allow get: if true;
      
      allow list: if true;
      
      allow delete: if request.auth != null;
    }

    // Also allow access to the folders themselves
    match /slips/{userEmail}/{date} {
      allow read: if true;
      allow list: if true;
    }
    
    match /slips/{userEmail} {
      allow read: if true;
      allow list: if true;
    }
    
    match /slips {
      allow read: if true;
      allow list: if true;
    }

    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}